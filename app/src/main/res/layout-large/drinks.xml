<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/AppBackground"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/category1"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textColor="@color/AppTitleText"
        android:padding="7dp"
        android:layout_margin="5dp"
        android:textSize="35sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/drink1"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_image"
                        android:padding="3dp"
                        android:onClick="clickButton"
                        android:layout_width="180dp"
                        android:layout_height="125dp"
                        android:src="@drawable/drink1"
                        android:contentDescription="@string/drink1" />

                    <ImageView
                        android:id="@+id/drink2"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_image"
                        android:padding="3dp"
                        android:onClick="clickButton"
                        android:layout_width="180dp"
                        android:layout_height="125dp"
                        android:src="@drawable/drink2"
                        android:contentDescription="@string/drink2" />

                    <ImageView
                        android:id="@+id/drink3"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_image"
                        android:padding="3dp"
                        android:onClick="clickButton"
                        android:layout_width="180dp"
                        android:layout_height="125dp"
                        android:src="@drawable/drink3"
                        android:contentDescription="@string/drink3" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/drink4"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_image"
                        android:padding="3dp"
                        android:onClick="clickButton"
                        android:layout_width="180dp"
                        android:layout_height="125dp"
                        android:src="@drawable/drink4"
                        android:contentDescription="@string/drink4" />

                    <ImageView
                        android:id="@+id/drink5"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_image"
                        android:padding="3dp"
                        android:onClick="clickButton"
                        android:layout_width="180dp"
                        android:layout_height="125dp"
                        android:src="@drawable/drink5"
                        android:contentDescription="@string/drink5" />

                    <ImageView
                        android:id="@+id/drink6"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_image"
                        android:padding="3dp"
                        android:onClick="clickButton"
                        android:layout_width="180dp"
                        android:layout_height="125dp"
                        android:src="@drawable/drink6"
                        android:contentDescription="@string/drink6" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/drink7"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_image"
                        android:padding="3dp"
                        android:onClick="clickButton"
                        android:layout_width="180dp"
                        android:layout_height="125dp"
                        android:src="@drawable/drink7"
                        android:contentDescription="@string/drink7" />

                    <ImageView
                        android:id="@+id/drink8"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_image"
                        android:padding="3dp"
                        android:onClick="clickButton"
                        android:layout_width="180dp"
                        android:layout_height="125dp"
                        android:src="@drawable/drink8"
                        android:contentDescription="@string/drink8" />

                    <ImageView
                        android:id="@+id/drink9"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_image"
                        android:padding="3dp"
                        android:onClick="clickButton"
                        android:layout_width="180dp"
                        android:layout_height="125dp"
                        android:src="@drawable/drink9"
                        android:contentDescription="@string/drink9" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/goBack"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="30dp"
                        android:contentDescription="@string/go_back_button"
                        android:onClick="clickButton"
                        android:src="@drawable/back" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>